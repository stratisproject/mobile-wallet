{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "lib": ["dom", "es2015", "es2017"],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "baseUrl": "./",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "node_modules/*", "node_modules/@walletconnect/browser-utils/dist/cjs/browser.d.ts"],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },
  "rules": {
    "no-console": false
  }
}
